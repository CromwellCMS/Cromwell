{
    "compilerOptions": {
        "target": "ES2019",
        "module": "esnext",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "noImplicitAny": false,
        "types": [
            "node",
            "jest",
        ],
    },
    "include": [
        "../**/*.ts",
        "../**/*.tsx",
    ],
    "exclude": [
        "node_modules"
    ]
}