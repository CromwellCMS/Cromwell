{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ESNext",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "baseUrl": ".",
        "allowJs": false,
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "importHelpers": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "build",
        "node_modules"
    ]
}