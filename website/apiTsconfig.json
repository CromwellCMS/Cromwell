{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "allowJs": true,
        "jsx": "react",
        "baseUrl": ".",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "removeComments": false,
        "moduleResolution": "node"
    },
    "include": [
        "../system/core/frontend/src/**/*.ts",
        "../system/core/frontend/src/**/*.tsx",
        "../system/core/common/src/**/*.ts",
        "../system/core/common/src/**/*.tsx",
        "../system/core/backend/src/**/*.ts",
        "../system/core/backend/src/**/*.tsx"
    ],
    "exclude": [
        "../system/core/frontend/src/**/*test.ts",
        "../system/core/frontend/src/**/*test.tsx",
        "../system/core/common/src/**/*test.ts",
        "../system/core/common/src/**/*test.tsx",
        "../system/core/backend/src/**/*test.ts",
        "../system/core/backend/src/**/*test.tsx",
        "frontend/src/declarations",
        "node_modules",
        "dist",
        "es"
    ]
}