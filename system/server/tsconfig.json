{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2019",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "incremental": true,
    "paths": {
      "@App/*": [
        "src/*"
      ],
    },
  },
  "exclude": [
    "node_modules",
    ".cromwell",
    "build"
  ],
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts",
  ],
}