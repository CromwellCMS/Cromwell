{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2019",
    "baseUrl": ".",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "incremental": true,
    "paths": {
      "@App/*": ["src/*"],
    },
  },
  "exclude": [
    "node_modules",
    ".cromwell",
    "build"
  ],
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts",
  ],
}