div.image-tool__image-preloader {
    display: none;
}

.image-tool--loading img.image-tool__image-picture {
    display: block;
}

.image-tool--loading div.image-tool__image {
    background-color: transparent;
    border: none;
}

blockquote.cdx-quote .cdx-quote__text {
    border-left: 4px solid #aaa;
    padding-left: 12px;
    min-height: auto;
}

div.cdx-warning__message {
    min-height: auto;
}

div.cdx-warning::before {
    margin-top: 2px;
}
