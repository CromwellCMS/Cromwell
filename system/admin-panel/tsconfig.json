{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "baseUrl": ".",
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "types": [
      "jest",
      "node",
      "@testing-library/jest-dom"
    ],
    "paths": {
      "@App/*": [
        "src/*"
      ],
    },
  },
  "exclude": [
    "node_modules",
    ".cromwell",
    "build"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ]
}