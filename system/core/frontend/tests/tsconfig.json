{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "target": "ES2019",
        "module": "esnext",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "allowJs": true,
        "jsx": "react",
        "baseUrl": ".",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "removeComments": false,
        "moduleResolution": "node",
        "types": [
            "node",
            "jest",
        ],
    },
    "include": [
        "**/*.ts"
    ]
}