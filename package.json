{
    "name": "@cromwell/root",
    "version": "1.0.0",
    "main": "startup.js",
    "private": true,
    "scripts": {
        "startup": "node ./startup.js",
        "build": "node ./startup.js build",
        "build:core": "npm run build --prefix ./system/core/common && npm run build --prefix ./system/core/backend && npm run build --prefix ./system/core/frontend",
        "build:system": "node ./startup.js build --system",
        "dev": "node ./system/manager/startup.js development",
        "dev:win": "node ./system/manager/src/utils/windowsDev.js",
        "link:cli": "cd ./system/cli && npm link --only=production && yarn",
        "bundle:modules": "npx crw bm",
        "lerna:patch": "lerna version patch --exact",
        "lerna:publish": "lerna publish from-package",
        "clean": "node system/cli/src/utils/cleanup.js",
        "win-remove-node-modules": "rmdir \"./node_modules\" /q /s",
        "test": "npm run test:server && npm run test:backend && npm run test:frontend && npm run test:admin && npm run test:cli && npm run test:utils",
        "test:server": "cd system/server && npm run test",
        "test:admin": "cd system/admin-panel && npm run test",
        "test:frontend": "cd system/core/frontend && npm run test",
        "test:backend": "cd system/core/backend && npm run test",
        "test:cli": "cd system/cli && npm run test",
        "test:utils": "cd system/utils && npm run test",
        "heroku-postbuild": "node ./startup.js build --no-install",
        "start": "node ./system/manager/src/utils/herokuStart.js",
        "docker:start-dev-mariadb": "docker run --rm -d -p 3306:3306 --name crw-mariadb -e MARIADB_ALLOW_EMPTY_ROOT_PASSWORD=true -e MARIADB_DATABASE=cromwell -e MYSQL_USER=cromwell -e MYSQL_PASSWORD=my_password mariadb:latest",
        "docker:start-dev-mariadb2": "docker run --rm -d -p 3307:3306 --name crw-mariadb2 -e MARIADB_ALLOW_EMPTY_ROOT_PASSWORD=true -e MARIADB_DATABASE=cromwell -e MYSQL_USER=cromwell -e MYSQL_PASSWORD=my_password mariadb:latest",
        "docker:start-dev-postgres": "docker run --rm -d -p 5432:5432 --name crw-postgres -e POSTGRES_DB=cromwell -e POSTGRES_USER=cromwell -e POSTGRES_PASSWORD=my_password postgres",
        "docker:build": "docker build -t cromwell:latest -f ./docker/cromwell/Dockerfile ./docker",
        "docker:build-maria": "docker build -t cromwell-mariadb:latest -f ./docker/cromwell-mariadb/Dockerfile ./docker",
        "docker:prune-builder": "docker builder prune -a"
    },
    "workspaces": [
        "system/*",
        "system/core/*",
        "plugins/*",
        "themes/*",
        "website",
        ".cromwell/bundled-modules"
    ],
    "engines": {
        "node": "14.x",
        "yarn": "1.x"
    },
    "resolutions": {
        "@apollo/client": "3.2.1",
        "@loadable/component": "5.15.0",
        "clsx": "1.1.1",
        "date-fns": "2.23.0",
        "graphql": "15.5.1",
        "graphql-tag": "2.12.5",
        "mobx": "6.3.2",
        "mobx-react": "7.2.0",
        "next": "11.1.0",
        "query-string": "7.0.1",
        "quill": "1.3.7",
        "pure-react-carousel": "1.27.6",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-html-parser": "2.0.2",
        "react-is": "17.0.2",
        "react-resize-detector": "6.7.6",
        "react-toastify": "7.0.4",
        "react-image-lightbox": "5.1.4",
        "throttle-debounce": "3.0.1",
        "tslib": "2.3.1"
    },
    "cromwell": {
        "themes": [
            "@cromwell/theme-store",
            "@cromwell/theme-blog",
            "theme-test"
        ]
    },
    "cache-version": "7; modify this string to reset circleci cache",
    "devDependencies": {
        "lerna": "^4.0.0"
    }
}